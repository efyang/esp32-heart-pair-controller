<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".ConfigActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/localUserName"
            android:ems="10"
            android:id="@+id/localNameInput" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            android:hint="Name" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/pairedUserName"
            android:ems="10"
            android:id="@+id/pairedNameInput"
            android:hint="Paired Name"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/localNameInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/configOkButton"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/pairedNameInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/localNameInput" app:layout_constraintStart_toStartOf="@+id/localNameInput"
            app:layout_constraintEnd_toEndOf="@+id/localNameInput" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Paired Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintBottom_toTopOf="@+id/pairedNameInput" app:layout_constraintEnd_toEndOf="@+id/pairedNameInput"
            app:layout_constraintStart_toStartOf="@+id/pairedNameInput" app:layout_constraintHorizontal_bias="0.0"
    />
</androidx.constraintlayout.widget.ConstraintLayout>