<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout2">

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_circle"
            tools:ignore="ContentDescription"
            app:layout_constraintBottom_toBottomOf="@+id/colorPicker2"
            app:layout_constraintTop_toTopOf="@+id/colorPicker2" app:layout_constraintEnd_toEndOf="@+id/colorPicker2"
            app:layout_constraintStart_toStartOf="@+id/colorPicker2" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.504" android:visibility="visible"/>
    <com.madrapps.pikolo.HSLColorPicker android:layout_width="0dp" android:layout_height="300dp"
                                        android:layout_marginTop="8dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintHorizontal_bias="0.0"
                                        android:id="@+id/colorPicker2" app:lightness_indicator_radius="8dp"
                                        app:hue_indicator_radius="8dp" app:saturation_indicator_radius="8dp"
                                        app:hue_radius_offset="-15dp" android:paddingTop="25dp"
                                        android:paddingBottom="25dp" app:hue_arc_width="10dp"
                                        app:lightness_arc_width="10dp" app:saturation_arc_width="10dp"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.392" android:visibility="visible"
    />
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lampToggleButton"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/colorPicker2" app:layout_constraintVertical_bias="0.146"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textOn="Lamp Mode ON"
            android:textOff="Lamp Mode OFF"/>
    <TextView
            android:text="Lamp Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lampTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="sans-serif-light"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/colorPicker2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lampIndicatorToggleButton"
            app:layout_constraintTop_toBottomOf="@+id/lampToggleButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.120000005" android:textOff="Mood Indicators OFF"
            android:textOn="Mood Indicators ON"/>
</androidx.constraintlayout.widget.ConstraintLayout>