<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Happy Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/moodName"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tabLayout"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="sans-serif-light"
            android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.tabs.TabLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/tabLayout">

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loveTab"
                android:text="@string/heart_emoji" android:tag="love"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":)))" android:id="@+id/happyTab" android:tag="happy"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":'(" android:id="@+id/sadTab" android:tag="sad"/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fearTab" android:text="o_0" android:tag='"fear"'/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/angerTab" android:text="&gt;:("
                android:tag="anger"/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/disgustTab" android:text="@string/disgust_emoji"
                android:tag="disgust"/>
    </com.google.android.material.tabs.TabLayout>

    <com.madrapps.pikolo.HSLColorPicker android:layout_width="0dp" android:layout_height="300dp"
                                        android:layout_marginTop="52dp"
                                        app:layout_constraintTop_toBottomOf="@+id/moodName"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintHorizontal_bias="0.0"
                                        android:id="@+id/colorPicker" app:lightness_indicator_radius="8dp"
                                        app:hue_indicator_radius="8dp" app:saturation_indicator_radius="8dp"
                                        app:hue_radius_offset="-5dp" android:paddingTop="10dp"
                                        android:paddingBottom="10dp"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_circle"
            app:layout_constraintBottom_toBottomOf="@+id/colorPicker"
            app:layout_constraintEnd_toEndOf="@+id/colorPicker"
            app:layout_constraintStart_toStartOf="@+id/colorPicker"
            app:layout_constraintTop_toTopOf="@+id/colorPicker"
            tools:ignore="ContentDescription"/>
</androidx.constraintlayout.widget.ConstraintLayout>